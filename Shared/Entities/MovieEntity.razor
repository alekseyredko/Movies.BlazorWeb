<td>    
    <NavLink class="nav-justified" href="@movieLink">@Movie.MovieName</NavLink>
</td>
<td>
    <p>Duration: @Movie.Duration</p>
</td>
<td>
    <p>Rate: @Movie.Rate</p>
</td>
<td>
    @if (canEditAndDelete)
    {
        <button class="btn btn-warning" @onclick="GoToEditMovie">Update</button>
    }
</td>
<td>
    @if (canEditAndDelete)
    {
        <button class="btn btn-danger" @onclick="ShowDeleteDialog">Delete</button>
    }
</td>


@if (deleteDialogOpen)
{
    <ConfirmDialog Title="Are you sure?"
                   Text="Do you want to delete this entry?"
                   OnClose="@OnDeleteAsync"
                   DialogType="ConfirmDialog.ModalDialogType.DeleteCancel">
    </ConfirmDialog>
}